<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.bunniesarecute.admin.textmadness.ShareOptions.ShareOptionsFragment">

    <TextView
        android:id="@+id/share_header"
        android:text="@string/select_share_option"
        android:textColor="@color/teal"
        android:textStyle="bold"
        android:padding="@dimen/text_padding"
        android:gravity="center"
        android:textSize="@dimen/text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"/>


    <LinearLayout
        android:id="@+id/top_buttons"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/text_message_button"
            android:src="@drawable/textmessageimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/button_padding"/>

        <ImageButton
            android:id="@+id/email_button"
            android:src="@drawable/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/button_padding"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@id/top_buttons">

        <ImageButton
            android:id="@+id/facebook_button"
            android:src="@drawable/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/button_padding"/>

        <ImageButton
            android:id="@+id/twitter_button"
            android:src="@drawable/twittericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/button_padding"/>


    </LinearLayout>



</RelativeLayout>
